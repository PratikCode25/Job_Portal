<header>
  <!-- Header Start -->
  <div class="header-area header-transparrent">
    <div class="headder-top header-sticky">
      <div class="container">
        <div class="row align-items-center">
  
          <div class="col-lg-3 col-md-4 d-flex align-items-center">
            
            <div class="d-flex align-items-center">
              <a href="<%= generateUrl('home-page') %>" class="d-flex align-items-center text-decoration-none">
               
                <img
                  src="/<%= portalSetting.logo || '/assets/img/logo.png' %>"
                  alt="<%= portalSetting.portalName || 'Job Portal' %>"
                  style="height: 40px; width: auto; margin-right: 3px"
                />

               
                <span style="font-weight: 600; color: #275df5; font-size: 18px"> <%= portalSetting.portalName || 'Job Portal' %> </span>
              </a>
            </div>
          </div>

          <div class="col-lg-9 col-md-9">
            <div class="menu-wrapper">
              <!-- Main-menu -->
              <div class="main-menu">
                <nav class="d-none d-lg-block">
                  <ul id="navigation">
                    <li><a href="<%=generateUrl('home-page') %>" class="text-decoration-none">Home</a></li>
                    <li><a href="<%=generateUrl('public-jobs-page') %>" class="text-decoration-none">Jobs </a></li>
                    <li><a href="<%=generateUrl('public-blog-list-page') %>" class="text-decoration-none">Blog </a></li>
                  </ul>
                </nav>
              </div>

              <div class="header-btn d-none f-right d-lg-block position-relative">
                <!-- Register Dropdown -->
                <div class="register-dropdown-wrapper d-inline-block position-relative">
                  <a href="#" class="custom-btn head-btn1 text-decoration-none">Register</a>
                  <ul class="submenu register-submenu">
                    <li><a class="text-decoration-none" href="<%=generateUrl('recruiter-register-page') %>">Recruiter Regiter</a></li>
                    <li><a class="text-decoration-none" href="<%=generateUrl('candidate-register-page') %>">Candidate Register</a></li>
                  </ul>
                </div>

                <!-- Login Dropdown -->
                <a href="<%=generateUrl('login-page') %>" class="custom-btn head-btn2 text-decoration-none">Login</a>
              </div>
            </div>
          </div>
          <!-- Mobile Menu -->
          <div class="col-12">
            <div class="mobile_menu d-block d-lg-none"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->
</header>
