<header>
  <!-- Header Start -->
  <div class="header-area header-transparrent">
    <div class="headder-top header-sticky">
      <div class="container">
        <div class="row align-items-center">
          <!-- <div class="col-lg-3 col-md-2">
           
            <div class="logo">
              <a href="index.html"><img src="/assets/img/logo/logo.png" alt="" /></a>
            </div>
          </div> -->

          <div class="col-lg-3 col-md-4 d-flex align-items-center">
            
            <div class="d-flex align-items-center">
              <a href="<%= generateUrl('home-page') %>" class="d-flex align-items-center text-decoration-none">
               
                <img
                  src="/<%= portalSetting.logo || '/assets/img/logo.png' %>"
                  alt="<%= portalSetting.portalName || 'Job Portal' %>"
                  style="height: 40px; width: auto; margin-right: 3px"
                />

               
                <span style="font-weight: 600; color: #275df5; font-size: 18px"> <%= portalSetting.portalName || 'Job Portal' %> </span>
              </a>
            </div>
          </div>

          <div class="col-lg-9 col-md-9">
            <div class="menu-wrapper">
              <!-- Main-menu -->
              <div class="main-menu">
                <nav class="d-none d-lg-block">
                  <ul id="navigation">
                    <li><a href="<%=generateUrl('candidate-dashboard') %>" class="text-decoration-none">Home</a></li>
                    <li><a href="<%=generateUrl('candidate-profile') %>" class="text-decoration-none">Profile</a></li>
                    <li>
                      <a href="#" class="text-decoration-none">Jobs</a>
                      <ul class="submenu">
                        <li><a href="<%= generateUrl('candidate-job-recommended-page') %>" class="text-decoration-none">Recommended Jobs</a></li>
                        <li><a href="<%= generateUrl('candidate-job-find-page') %>" class="text-decoration-none">Find Jobs</a></li>
                        <li><a href="<%= generateUrl('candidate-job-saved-page') %>" class="text-decoration-none">Saved Jobs</a></li>
                        <li><a href="<%= generateUrl('candidate-application-status-page') %>" class="text-decoration-none">Applications Status</a></li>
                      </ul>
                    </li>
                    <li><a href="<%=generateUrl('candidate-blog-list-page') %>" class="text-decoration-none">Blog</a></li>
                  </ul>
                </nav>
              </div>

              <div class="header-btn d-none f-right d-lg-block position-relative">
                <div class="user-profile-dropdown-wrapper d-inline-block position-relative">
                  <div class="user-trigger d-flex align-items-center">
                    <img
                      src="<%= userInfo.profilePicture ? '/'+ userInfo.profilePicture : '/assets/img/no-image.png' %>"
                      alt="Profile"
                      class="rounded-circle me-2"
                      style="width: 30px; height: 30px"
                    />
                    <span class="user-name"><%=userInfo.username %></span>
                  </div>
                  <ul class="submenu profile-submenu">
                    <!-- <li><a href="#" class="text-decoration-none">Update Password</a></li> -->
                    <li><a href="<%=generateUrl('logout')%>" class="text-decoration-none">Logout</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- Mobile Menu -->
          <div class="col-12">
            <div class="mobile_menu d-block d-lg-none"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header End -->
</header>
