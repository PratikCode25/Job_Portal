<!DOCTYPE html>
<html class="no-js" lang="zxx">
  <%- include('./layouts/head') %>

  <body>
    <%- include('./layouts/header') %>
    <main>
      <div class="container py-5">
        <div class="row">
          <!-- Blog Detail Main Content -->
          <div class="col-lg-8 mb-5 mb-lg-0">
            <div class="blog-detail-section p-4 bg-white rounded shadow-sm">
              <img src="/<%=blog.coverImage %>" alt="Cover Image" class="blog-cover mb-4" />
              <p class="blog-category text-muted">| <%=blog.category.name %></p>
              <h1 class="mb-3"><%=blog.title %></h1>
              <div class="blog-detail-meta mb-4">
                Posted by <strong>Admin</strong> Â· <%=new Date(blog.createdAt).toLocaleDateString("en-IN", { day: "numeric", month: "long", year:
                "numeric", }) %>
              </div>

              <div class="blog-detail-body"><%-blog.content%></div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="col-lg-4">
            <div class="sidebar-latest-card p-4 bg-white rounded shadow-sm">
              <h5 class="mb-4">Latest Blogs</h5>

              <% if(latestBlogs && latestBlogs.length>0){ latestBlogs.forEach((latest)=>{ %>
              <div class="latest-blog-item">
                <img src="/<%=latest.coverImage %>" alt="Latest Blog" />
                <div>
                  <a href="/blogs/<%=latest._id%>/<%=latest.slug%>" class="latest-blog-title"><%=latest.title%></a>
                  <div class="latest-blog-date">
                    <%=new Date(latest.createdAt).toLocaleDateString("en-IN", { day: "numeric", month: "long", year: "numeric", }) %>
                  </div>
                </div>
              </div>

              <% }) } %>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('./layouts/footer') %> <%- include('./layouts/footer-scripts') %>

    <script></script>
  </body>
</html>
