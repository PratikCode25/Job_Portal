<!DOCTYPE html>
<html lang="en">
  <%-include('./layouts/head') %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%-include('./layouts/sidebar') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%-include('./layouts/topbar') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800">Manage Job category</h1>
            </div>

            <div class="card shadow p-3 mb-3" style="max-width: 500px; margin: auto">
              <h5 class="card-title text-primary mb-3">Add Job Category</h5>
              <div id="addMessageArea" class="mb-3"></div>
              <form id="addCategoryForm">
                <div class="mb-3">
                  <label for="add-name" class="form-label required">Category Name</label>
                  <input type="text" id="add-name" name="name" class="form-control" placeholder="Enter category name" />
                  <div class="text-danger" id="add-name-error"></div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
            </div>

            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Categories List</h6>
              </div>

              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered table-sm text-dark"
                    id="categoriesTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <!-- <th>Industry</th> -->
                        <th>category</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
            </div>

            <div
              class="modal fade"
              id="editCategoryModal"
              tabindex="-1"
              role="dialog"
              aria-labelledby="editCategoryModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <input type="hidden" id="categoryId" name="categoryId" value="" />
                <form id="editCategoryForm">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editCategoryModalLabel">Edit Job category</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>

                    <div class="modal-body">
                      <div id="editMessageArea" class="mb-3"></div>
                      <div class="form-group">
                        <label for="edit-name" class="required">Category Name</label>
                        <input type="text" class="form-control" id="edit-name" name="name" value="" />
                        <div class="text-danger" id="edit-name-error"></div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%-include('./layouts/footer') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <%-include('./layouts/footer-scripts') %>

    <script>
      $(document).ready(function () {
        $("#addCategoryForm").on("submit", function (e) {
          e.preventDefault();

          const name = $("#add-name").val().trim();
          // const industry = $("#add-industry").val();

          let hasError = false;

          // if (!industry) {
          //   $("#add-industry-error").text("Industry is requied.");
          //   hasError = true;
          // }
          if (!name) {
            $("#add-name-error").text("Category name is requied.");
            hasError = true;
          }

          if (hasError) return;

          $.ajax({
            url: "/admin/job-categories",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({ name }),
            success: function (response) {
              showMessage(response.message, "success", "add");
              // fetchIndustries();
              $("#addCategoryForm")[0].reset();
              $("#addCategoryForm .text-danger").text("");
              $("#categoriesTable").DataTable().ajax.reload(null, false);
            },
            error: function (error) {
              if (handleAuthRedirect(error)) return;

              if (error.responseJSON && error.responseJSON.errors) {
                const errors = error.responseJSON.errors;
                for (let field in errors) {
                  $("#" + "add-" + field + "-error").text(errors[field]);
                }
              }

              if (error.responseJSON && error.responseJSON.message) {
                showMessage(error.responseJSON.message, "danger", "add");
              }
            },
          });
        });

        function fetchJobcategories() {
          $("#categoriesTable").DataTable({
            ajax: {
              url: "/admin/job-categories",
              dataSrc: "data",
            },
            columns: [
              // { data: "industry" },
              { data: "name" },
              {
                data: null,
                orderable: false,
                render: function (data) {
                  return `
           <button class="btn btn-sm text-warning edit-btn" data-id="${data._id}" title="Edit" style="background: none; border: none;">
        <i class="fas fa-pen"></i>
      </button>
      <button class="btn btn-sm text-danger delete-btn" data-id="${data._id}" title="Delete" style="background: none; border: none;">
        <i class="fas fa-trash"></i>
      </button>
        `;
                },
              },
            ],
          });
        }

        fetchJobcategories();

        $("#categoriesTable").on("click", ".edit-btn", function () {
          const id = $(this).data("id");

          $.ajax({
            url: "/admin/job-categories/" + id,
            type: "GET",
            success: function (response) {
              $("#categoryId").val(response.data._id);
              // $("#edit-industry").val(response.data.industry);
              $("#edit-name").val(response.data.name);
              $("#editCategoryModal").modal("show");
            },
            error: function (error) {
              if (handleAuthRedirect(error)) return;

              alert(error.responseJSON.message);
            },
          });
        });

        $("#editCategoryForm").submit(function (e) {
          e.preventDefault();

          const name = $("#edit-name").val().trim();
          // const industry = $("#edit-industry").val();

          let hasError = false;

          // if (!industry) {
          //   $("#edit-industry-error").text("Industry is requied.");
          //   hasError = true;
          // }
          if (!name) {
            $("#edit-name-error").text("Category name is requied.");
            hasError = true;
          }

          if (hasError) return;

          $.ajax({
            url: "/admin/job-categories/" + $("#categoryId").val() + "/update",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({ name}),
            success: function (response) {
              $("#categoriesTable").DataTable().ajax.reload(null, false);
              $("#editCategoryModal").modal("hide");
            },
            error: function (error) {
              if (handleAuthRedirect(error)) return;
              if (error.responseJSON && error.responseJSON.errors) {
                const errors = error.responseJSON.errors;
                for (let field in errors) {
                  $("#" + "edit-" + field + "-error").text(errors[field]);
                }
              }

              if (error.responseJSON && error.responseJSON.message) {
                showMessage(error.responseJSON.message, "danger", "edit");
              }
            },
          });
        });

        $("#categoriesTable").on("click", ".delete-btn", function () {
          const id = $(this).data("id");

          const conf = confirm("Do you want to delete this category?");
          if (!conf) {
            return false;
          }

          $.ajax({
            url: "/admin/job-categories/" + id + "/delete",
            type: "POST",
            success: function (response) {
              $("#categoriesTable").DataTable().ajax.reload(null, false);
            },
            error: function (error) {
              if (handleAuthRedirect(error)) return;

              if (error.responseJSON && error.responseJSON.message) {
                alert(error.responseJSON.message);
              }
            },
          });
        });

        function showMessage(message, type = "success", action) {
          if (action === "add") {
            $("#addMessageArea").html(`
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          ${message}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
      `);
          }

          if (action === "edit") {
            $("#editMessageArea").html(`
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          ${message}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
      `);
          }

          setTimeout(() => {
            $(".alert").alert("close");
          }, 3000);
        }

        function handleAuthRedirect(error) {
          const response = error.responseJSON;
          if (error.status === 401) {
            window.location.href = "/auth/login";
            return true;
          }
          return false;
        }
      });
    </script>
  </body>
</html>
